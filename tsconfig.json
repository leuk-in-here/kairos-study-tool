{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "composite": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@studyos/*": [
                "packages/*/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}